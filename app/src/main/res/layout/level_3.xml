<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"


    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    tools:context=".level3">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="     Press Start To Begin!"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/level1start"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:onClick="OnclickStartLvl_3"
        android:text="Start" />

    <GridLayout
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:rowCount="3">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1">

            <ImageView
                android:id="@+id/hbtn1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FDFCFC"
                android:onClick="onClick"
                android:src="@drawable/nissan" />
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:clickable="true"
            >

            <ImageView
                android:id="@+id/hbtn2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FDFCFC"
                android:onClick="onClick1"
                android:src="@drawable/porsche" />


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:clickable="true">

            <ImageView
                android:id="@+id/hbtn3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FDFCFC"
                android:onClick="onClick2"
                android:src="@drawable/subaru" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:clickable="true">

            <ImageView
                android:id="@+id/hbtn4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FDFCFC"
                android:onClick="onClick3"
                android:src="@drawable/bmw" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:clickable="true">

            <ImageView
                android:id="@+id/hbtn5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FDFCFC"
                android:onClick="onClick4"
                android:src="@drawable/ferrari" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:clickable="true">

            <ImageView
                android:id="@+id/hbtn6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FDFCFC"
                android:onClick="onClick5"
                android:src="@drawable/peugeot" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:clickable="true">

            <ImageView
                android:id="@+id/hbtn7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FDFCFC"
                android:onClick="onClick6"
                android:src="@drawable/mitsubishi" />


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:clickable="true">

            <ImageView
                android:id="@+id/hbtn8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FDFCFC"
                android:onClick="onClick7"
                android:src="@drawable/audi" />


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:clickable="true">

            <ImageView
                android:id="@+id/hbtn9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FDFCFC"
                android:onClick="onClick8"
                android:src="@drawable/honda" />


        </androidx.cardview.widget.CardView>






    </GridLayout>


</LinearLayout>